{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src"],
      "@app/*": ["./src/app/*"],
      "@entities/*": ["./src/entities/*"],
      "@entities/recipe/*": ["./src/entities/recipe/*"],
      "@entities/recipe/api/*": ["./src/entities/recipe/api/*"],
      "@entities/recipe/model/*": ["./src/entities/recipe/model/*"],
      "@entities/recipe/ui/*": ["./src/entities/recipe/ui/*"],
      "@shared/*": ["./src/shared/*"],
      "@shared/ui/*": ["./src/shared/ui/*"],
      "@shared/ui/button/*": ["./src/shared/ui/button/*"],
      "@shared/ui/icon/*": ["./src/shared/ui/icon/*"],
    }
  }
}
